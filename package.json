{
  "name": "nextgen-marketplace",
  "version": "3.0.0",
  "description": "NextGen Marketplace - Ultra-Fast 7-Layer Architecture",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:prod": "turbo run build:prod",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@nextgen/api-v3",
    "dev:web": "turbo run dev --filter=@nextgen/web",
    "dev:admin": "turbo run dev --filter=@nextgen/admin",
    "dev:vendor": "turbo run dev --filter=@nextgen/vendor-portal",
    "dev:worker": "turbo run dev --filter=@nextgen/worker",
    "build:worker": "turbo run build --filter=@nextgen/worker",
    "start": "turbo run start",
    "start:prod": "turbo run start:prod",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:performance": "vitest run tests/performance/",
    "test:e2e": "turbo run test:e2e",
    "ui:tokens": "ts-node scripts/ui/generate-design-tokens.ts",
    "ui:tokens:check": "ts-node scripts/ui/generate-design-tokens.ts --check",
    "ui:anti-patterns": "ts-node scripts/ui/anti-patterns.ts",
    "ui:playwright": "pnpm exec playwright test -c playwright.ui.config.ts",
    "ui:pa11y": "pa11y-ci --config pa11yci.json",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build",
    "clean": "turbo run clean && rimraf node_modules/.cache",
    "clean:all": "turbo run clean && rimraf node_modules",
    "health": "curl -f http://localhost:3001/api/v3/health || exit 1",
    "deploy:canary": "ts-node scripts/deploy/canary-deploy.ts",
    "deploy:complete": "ts-node scripts/deploy/complete-deployment.ts",
    "post-deploy:auto-scaling": "ts-node scripts/post-deploy/auto-scaling.ts",
    "post-deploy:security-audit": "ts-node scripts/post-deploy/security-audit.ts",
    "provision:tenant": "ts-node scripts/post-deploy/auto-tenant-provisioning.ts",
    "validate:system": "pnpm health && pnpm test:integration && pnpm test:performance",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f docker-compose.monitoring.yml logs -f",
    "monitoring:restart": "pnpm monitoring:stop && pnpm monitoring:start",
    "monitoring:setup": "ts-node scripts/monitoring/setup-monitoring.ts",
    "monitoring:validate": "ts-node scripts/monitoring/validate-monitoring.ts",
    "monitoring:health": "curl -f http://localhost:3000/api/health && curl -f http://localhost:9090/-/healthy && curl -f http://localhost:9093/-/healthy",
    "payment:test-zarinpal": "ts-node scripts/payment/test-zarinpal.ts",
    "payment:test-moodian": "ts-node scripts/payment/test-moodian.ts",
    "payment:test-all": "pnpm payment:test-zarinpal && pnpm payment:test-moodian",
    "grafana:open": "open http://localhost:3000 || start http://localhost:3000",
    "prometheus:open": "open http://localhost:9090 || start http://localhost:9090",
    "alertmanager:open": "open http://localhost:9093",
    "prepare": "husky",
    "ui:events": "ts-node scripts/ui/validate-ui-events.ts",
    "ui:lighthouse": "lhci autorun --config lighthouserc.cjs",
    "ui:governance": "node scripts/ui/run-ui-governance.mjs"
  },
  "dependencies": {
    "@huggingface/tokenizers": "^0.1.1",
    "@nestjs/bullmq": "^10.0.0",
    "@nestjs/cache-manager": "^2.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@prisma/client": "5.19.1",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "argon2": "^0.31.0",
    "axios": "^1.6.0",
    "bullmq": "^5.0.0",
    "cache-manager": "^5.0.0",
    "cache-manager-ioredis-yet": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dompurify": "^3.0.0",
    "dotenv": "^16.4.5",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.0",
    "jsdom": "^23.0.0",
    "onnxruntime-node": "^1.20.1",
    "opossum": "^8.1.4",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.3",
    "redlock": "5.0.0-beta.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "xss": "^1.0.14",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@biomejs/biome": "^1.5.0",
    "@faker-js/faker": "^10.1.0",
    "@fast-check/vitest": "^0.2.4",
    "@lhci/cli": "^0.15.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.16",
    "@testcontainers/postgresql": "^11.11.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.0",
    "@types/qrcode": "^1.5.0",
    "@types/uuid": "^9.0.0",
    "@types/validator": "^13.11.7",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "detect-secrets": "^1.0.6",
    "fast-check": "^3.15.0",
    "husky": "^9.0.0",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8.4.47",
    "prisma": "5.19.1",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.17",
    "testcontainers": "^11.11.0",
    "ts-node": "^10.9.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.9"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ]
    }
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
