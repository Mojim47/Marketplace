{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,
    "newLine": "lf",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nextgen/context": ["libs/context/src/index.ts"],
      "@nextgen/context/*": ["libs/context/src/*"],
      "@nextgen/security": ["libs/security/src/index.ts"],
      "@nextgen/security/*": ["libs/security/src/*"],
      "@nextgen/queue": ["libs/queue/src/index.ts"],
      "@nextgen/queue/*": ["libs/queue/src/*"],
      "@nextgen/observability": ["libs/observability/src/index.ts"],
      "@nextgen/observability/*": ["libs/observability/src/*"],
      "@nextgen/payment": ["libs/payment/src/index.ts"],
      "@nextgen/payment/*": ["libs/payment/src/*"],
      "@nextgen/moodian": ["libs/moodian/src/index.ts"],
      "@nextgen/moodian/*": ["libs/moodian/src/*"],
      "@nextgen/auth": ["libs/auth/src/index.ts"],
      "@nextgen/auth/*": ["libs/auth/src/*"],
      "@nextgen/prisma": ["libs/prisma/src/index.ts"],
      "@nextgen/prisma/*": ["libs/prisma/src/*"],
      "@nextgen/types": ["libs/types/src/index.ts"],
      "@nextgen/types/*": ["libs/types/src/*"],
      "@nextgen/validation": ["libs/validation/src/index.ts"],
      "@nextgen/validation/*": ["libs/validation/src/*"],
      "@nextgen/config": ["libs/config/src/index.ts"],
      "@nextgen/config/*": ["libs/config/src/*"],
      "@nextgen/errors": ["libs/errors/src/index.ts"],
      "@nextgen/errors/*": ["libs/errors/src/*"],
      "@nextgen/sc3": ["libs/sc3/src/index.ts"],
      "@nextgen/sc3/*": ["libs/sc3/src/*"],
      "@nextgen/design-system": ["libs/design-system/src/index.ts"],
      "@nextgen/design-system/*": ["libs/design-system/src/*"],
      "@nextgen/storage": ["libs/storage/src/index.ts"],
      "@nextgen/storage/*": ["libs/storage/src/*"],
      "@nextgen/cache": ["libs/cache/src/index.ts"],
      "@nextgen/cache/*": ["libs/cache/src/*"],
      "@nextgen/resilience": ["libs/resilience/src/index.ts"],
      "@nextgen/resilience/*": ["libs/resilience/src/*"],
      "@nextgen/ai": ["libs/ai/src/index.ts"],
      "@nextgen/ai/*": ["libs/ai/src/*"],
      "@nextgen/ar": ["libs/ar/src/index.ts"],
      "@nextgen/ar/*": ["libs/ar/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/test/**",
    "**/examples/**",
    "**/__mocks__/**",
    "tests/**"
  ]
}
