{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/test",
    "rootDir": ".",
    "types": ["node", "jest", "@playwright/test"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false
