{
  "dashboard": {
    "id": null,
    "title": "NextGen Performance Deep Dive",
    "tags": ["nextgen", "performance", "latency"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Latency Heatmap (All Endpoints)",
        "type": "heatmap",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"nextgen-api\"}[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Slow Query Detector (>100ms)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(20, histogram_quantile(0.95, rate(db_query_duration_seconds_bucket{query_type!=\"\"}[5m])) > 0.1)",
            "legendFormat": "{{query_type}} - {{table}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
      },
      {
        "id": 3,
        "title": "Cache Performance Breakdown",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(cache_hits_total[5m])) by (cache_type)",
            "legendFormat": "{{cache_type}} Hits"
          },
          {
            "expr": "sum(rate(cache_misses_total[5m])) by (cache_type)",
            "legendFormat": "{{cache_type}} Misses"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
      },
      {
        "id": 4,
        "title": "Query Gateway Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(query_gateway_duration_seconds_bucket{type=\"read-heavy\"}[5m]))",
            "legendFormat": "Read-Heavy P95"
          },
          {
            "expr": "histogram_quantile(0.95, rate(query_gateway_duration_seconds_bucket{type=\"critical\"}[5m]))",
            "legendFormat": "Critical P95"
          },
          {
            "expr": "histogram_quantile(0.95, rate(query_gateway_duration_seconds_bucket{type=\"analytics\"}[5m]))",
            "legendFormat": "Analytics P95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18}
      },
      {
        "id": 5,
        "title": "Memory Usage & GC",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"nextgen-api\"} / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)"
          },
          {
            "expr": "rate(nodejs_gc_duration_seconds_total[5m])",
            "legendFormat": "GC Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18}
      },
      {
        "id": 6,
        "title": "RLS Performance Impact",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rls_query_duration_seconds_bucket[5m]))",
            "legendFormat": "RLS Query P95"
          },
          {
            "expr": "histogram_quantile(0.95, rate(non_rls_query_duration_seconds_bucket[5m]))",
            "legendFormat": "Non-RLS Query P95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 26}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}