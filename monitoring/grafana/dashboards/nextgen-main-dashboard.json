{
  "dashboard": {
    "id": null,
    "title": "NextGen Marketplace - Main Dashboard",
    "tags": ["nextgen", "marketplace", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"nextgen-api\"}",
            "legendFormat": "API Status"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{job=\"keydb\"}",
            "legendFormat": "KeyDB"
          },
          {
            "expr": "up{job=\"clickhouse\"}",
            "legendFormat": "ClickHouse"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [{ "color": "red", "value": 0 }, { "color": "green", "value": 1 }]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Response Time Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"nextgen-api\"}[5m]))",
            "legendFormat": "P95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisLabel": "Percentage",
              "axisPlacement": "auto"
            },
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Query Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P50 DB Query"
          },
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 DB Query"
          },
          {
            "expr": "histogram_quantile(0.99, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P99 DB Query"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "s"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "5xx Error Rate"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "4xx Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "percent"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 }
      },
      {
        "id": 6,
        "title": "Tenant Activity Monitor",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (tenant_id) (rate(http_requests_total[5m])))",
            "legendFormat": "{{tenant_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 7,
        "title": "Security Events",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(security_violations_total[5m])",
            "legendFormat": "Security Violations"
          },
          {
            "expr": "rate(rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate Limit Exceeded"
          },
          {
            "expr": "rate(suspicious_activity_total[5m])",
            "legendFormat": "Suspicious Activity"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 8,
        "title": "AR Stream Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ar_stream_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 AR Stream Time"
          },
          {
            "expr": "rate(ar_cache_hits_total[5m]) / (rate(ar_cache_hits_total[5m]) + rate(ar_cache_misses_total[5m])) * 100",
            "legendFormat": "AR Cache Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" }
          }
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
